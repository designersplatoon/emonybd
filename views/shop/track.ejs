<form action="/track-orders" method="get">
    <label for="phone">Enter Customer Phone Number:</label>
    <input type="text" id="phone" name="phone" required>
    <button type="submit">Track</button>
  </form>
  
  <% if (orders) { %>
    <h2><%= message %></h2>
    <% if (orders.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Status</th>
            <th>Total</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach(order => { %>
            <tr>
              <td><%= order._id %></td>
              <td><%= order.status %></td>
              <td><%= order.total %></td>
              <td><%= order.createdAt.toDateString() %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p>No orders found for this phone number.</p>
    <% } %>
  <% } %>
  